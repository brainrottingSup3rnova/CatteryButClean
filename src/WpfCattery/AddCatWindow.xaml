<Window x:Class="WpfCattery.AddCatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="AddCatWindow" Height="450" Width="700"
        Background="#FFBCB5">
    <StackPanel>
        <StackPanel
            HorizontalAlignment="Left"
            Width="400"
            >
            <Label 
                Content="Name"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,20,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <TextBox 
                x:Name="NameTextBox"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="0,0,0,0"
                Foreground="#63372C"
                HorizontalAlignment="Center"
                Width="200"
                />
        </StackPanel>
        <StackPanel
            Width="400"
            HorizontalAlignment="Left">
            <Label 
                Content="Breed"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,0,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <TextBox 
                x:Name="BreedTextBox"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="0,0,0,0"
                Foreground="#63372C"
                Width="200"
                />
        </StackPanel>
        <StackPanel
            Width="400"
            HorizontalAlignment="Left">
            <Label
                Content="Gender"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,0,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <TextBox 
                x:Name="GenderTextBox"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="0,0,0,0"
                Foreground="#63372C"
                Width="200"
                />
        </StackPanel>
        <StackPanel
            Width="400"
            HorizontalAlignment="Left">
            <Label
                Content="Arrival date"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,0,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <DatePicker 
                x:Name="ArrivalDatePicker"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="0,0,0,0"
                Foreground="#63372C"
                Width="200"
                />
        </StackPanel>
        <StackPanel
            Width="400"
            HorizontalAlignment="Left">
            <Label
                Content="Birthdate"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,0,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <DatePicker 
                x:Name="BirthdatePicker"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Foreground="#63372C"
                Width="200"
                />
        </StackPanel>
        <StackPanel
            Width="400">
            <Label
                Content="Description"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,0,30,0"
                HorizontalAlignment ="Center"
                Foreground="#C97D60"
                />
            <TextBox 
                x:Name="DescriptionTextBox"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="0,0,0,0"
                Height="80"
                Foreground="#63372C"
                />
        </StackPanel>
        <Button 
            Content="Add Cat"
            FontFamily="Arial Rounded MT Bold"
            FontSize="16"
            Background="#F2E5D7"
            Foreground="#63372C"
            Width="150"
            Height="40"
            Margin="0,15,0,0"
            HorizontalAlignment ="Center"
            Click="AddCatButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
