<Window x:Class="WpfCattery.RegisterAdoptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="RegisterAdoptionWindow" Height="450" Width="800"
        Background="LightCyan">
    <StackPanel>
        <Label
            Content="Register Adoption"
            FontFamily="Arial Rounded MT Bold"
            FontSize="40"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            />
        <StackPanel>
            <Label
                Content="Select Adopter"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,10,30,0"/>
            <ComboBox
                x:Name="comboBoxAdopters"
                Width="400"
                Height="30"
                DisplayMemberPath="Name"/>
        </StackPanel>
        <StackPanel>
            <Label
                Content="Select Cat"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,10,30,0"/>
            <ComboBox
                x:Name="comboBoxCats"
                Width="400"
                Height="30"
                DisplayMemberPath="Name"/>
        </StackPanel>
        <DatePicker
            x:Name="datePickerAdoptionDate"
            Width="400"
            Height="30"
            Margin="0,20,0,0"
            />
        <Button
            Height="50"
            Width="200"
            Margin="0,40,0,0"
            Content="Register Adoption"
            FontFamily="Arial Rounded MT Bold"
            FontSize="20"
            Background="LawnGreen"
            Click="RegisterAdoptionBtn_Click"/>
        <Button
            Height="50"
            Width="200"
            Margin="0,10,0,0"
            Content="Go back"
            FontFamily="Arial Rounded MT Bold"
            FontSize="20"
            Background="LightPink"
            Click="GoBackBtn_Click"/>
    </StackPanel>
</Window>
