<Window x:Class="WpfCattery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700"
        Background="#FFBCB5">
    <StackPanel>
        <Menu 
            VerticalAlignment="Top"
            Background="#C97D60"
            Foreground="White"
            Height="30"
            >
            <MenuItem Header="_Cats"
                  Margin="0,5,0,0"
                  FontFamily="Arial Rounded MT Bold"
                  FontSize="16"
                  >
                <MenuItem Header="Add New Cat"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="AddCat_Click"
                          />
                <MenuItem Header="Manage cats"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="ManageCats_Click"
                          />
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Adoptions"
                      Margin="0,5,0,0"
                      FontFamily="Arial Rounded MT Bold"
                      FontSize="16"
                      >
                <MenuItem Header="Register Adoption"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="RegisterAdoption_Click"
                          />
                <MenuItem Header="Manage Adoptions"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="ManageAdoptions_Click"
                          />
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Adopters"
                  Margin="0,5,0,0"
                  FontFamily="Arial Rounded MT Bold"
                  FontSize="16"
                  >
                <MenuItem Header="Add New Adopter"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="AddAdopter_Click"
                          />
                <MenuItem Header="Manage Adopters"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="#C97D60"
                          Click="ManageAdopters_Click"
                          />
            </MenuItem>
        </Menu>
        <StackPanel>
            <Label 
                Content="Welcome to the Cattery Management System!!" 
                FontSize="30" 
                FontWeight="Bold" 
                FontFamily="Arial Rounded MT Bold"
                Foreground="#C97D60" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,20"/>
            <Label 
                Content="Use the menu above to navigate through the application." 
                FontSize="15" 
                Foreground="#63372C" 
                FontFamily="Arial Rounded MT Bold"
                HorizontalAlignment="Center" 
                Margin="5,-30,0,10"/>
        </StackPanel>
        <StackPanel
            Orientation="Horizontal">
            <Border 
                BorderBrush="#F2E5D7" 
                BorderThickness="2"
                Height="200"
                Width="200"
                CornerRadius="10"
                Padding="10" 
                Margin="30,20,0,0"
                Background="#F2E5D7"
                HorizontalAlignment="Center">
                <StackPanel
                    Orientation="Vertical">
                    <Label 
                        Content="Cats hosted" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        Foreground="#63372C" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="0,40,0,0"/>
                    <Label
                        Content=" "
                        x:Name="catsCountLabel"
                        Foreground="#63372C"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        FontSize="10"
                        />
                </StackPanel>
            </Border>
            <Border 
                BorderBrush="#F2E5D7" 
                BorderThickness="2"
                Height="200"
                Width="200"
                CornerRadius="10"
                Padding="10" 
                Margin="20,20,0,0"
                Background="#F2E5D7"
                HorizontalAlignment="Center">
                <StackPanel
                    Orientation="Vertical">
                    <Label 
                        Content="Total adoptions" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        Foreground="#63372C" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="0,40,0,0"/>
                    <Label
                        Content=" "
                        x:Name="adoptionsCountLabel"
                        Foreground="#63372C"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        FontSize="10"
                        />
                </StackPanel>
            </Border>
            <Border 
                BorderBrush="#F2E5D7" 
                BorderThickness="2"
                Height="200"
                Width="200"
                CornerRadius="10"
                Padding="10" 
                Margin="20,20,0,0"
                Background="#F2E5D7"
                HorizontalAlignment="Center">
                <StackPanel
                    Orientation="Vertical">
                    <Label
                        Content="Total adoptions" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        Foreground="#63372C" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="0,40,0,0"
                        />
                    <Label
                        Content=" "
                        x:Name="adoptersCountLabel"
                        Foreground="#63372C"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" 
                        FontFamily="Arial Rounded MT Bold"
                        FontSize="10"
                        />
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</Window>
