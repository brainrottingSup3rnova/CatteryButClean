<Window x:Class="WpfCattery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="LightCyan">
    <StackPanel>
        <Menu 
            VerticalAlignment="Top"
            Background="RoyalBlue"
            Foreground="White"
            Height="30"
            >
            <MenuItem Header="_Cats"
                  Margin="0,5,0,0"
                  FontFamily="Arial Rounded MT Bold"
                  FontSize="16"
                  >
                <MenuItem Header="Add New Cat"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="AddCat_Click"
                          />
                <MenuItem Header="Manage cats"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="ManageCats_Click"
                          />
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Adoptions"
                      Margin="0,5,0,0"
                      FontFamily="Arial Rounded MT Bold"
                      FontSize="16"
                      >
                <MenuItem Header="Register Adoption"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="RegisterAdoption_Click"
                          />
                <MenuItem Header="Manage Adoptions"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="ManageAdoptions_Click"
                          />
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Adopters"
                  Margin="0,5,0,0"
                  FontFamily="Arial Rounded MT Bold"
                  FontSize="16"
                  >
                <MenuItem Header="Add New Adopter"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="AddAdopter_Click"
                          />
                <MenuItem Header="Manage Adopters"
                          FontFamily="Arial Rounded MT Bold"
                          FontSize="14"
                          Background="AliceBlue"
                          Foreground="RoyalBlue"
                          Click="ManageAdopters_Click"
                          />
            </MenuItem>
        </Menu>
        <StackPanel>
            <Label 
                Content="Welcome to the Cattery Management System!!" 
                FontSize="24" 
                FontWeight="Bold" 
                Foreground="RoyalBlue" 
                HorizontalAlignment="Left" 
                Margin="0,20,0,20"/>
            <Label 
                Content="Use the menu above to navigate through the application." 
                FontSize="16" 
                Foreground="DarkSlateGray" 
                HorizontalAlignment="Left" 
                Margin="5,-30,0,10"/>
        </StackPanel>
        <StackPanel
            Orientation="Horizontal">
            <Label
                Content="Number of cats in the shelter rn:"
                FontSize="18"
                />
            <Label
                x:Name="catsCountLabel"
                Content=" "
                FontWeight="Bold"
                Foreground="ForestGreen"
                Margin="5,0,0,0"
                FontSize="20"
                />
        </StackPanel>
        <StackPanel
            Orientation="Horizontal">
            <Label
                Content="Number of adoptions registered:"
                FontSize="18"
                />
            <Label
                x:Name="adoptionsCountLabel"
                Content=" "
                FontWeight="Bold"
                Foreground="ForestGreen"
                Margin="5,0,0,0"
                FontSize="20"
                />
        </StackPanel>
    </StackPanel>
</Window>
