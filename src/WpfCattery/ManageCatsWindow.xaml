<Window x:Class="WpfCattery.ManageCatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="ManageCatsWindow" Height="450" Width="700"
        Background="#FFBCB5">
    <StackPanel>
        <Label 
            Content="Manage Cats"
            FontFamily="Arial Rounded MT Bold"
            FontSize="40"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Foreground="#C97D60"
            />
        <DataGrid
            x:Name="dataGridCats"
            Width="650"
            Margin="0,30,0,0"
            AutoGenerateColumns="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="true" Width="90"/>
                <DataGridTextColumn Header="Breed" Binding="{Binding Breed}" IsReadOnly="true" Width="90"/>
                <DataGridCheckBoxColumn Header="Is male" Binding="{Binding IsMale}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Arrival date" Binding="{Binding ArrivalDate}" IsReadOnly="true" Width="110"/>
                <DataGridTextColumn Header="Birthdate" Binding="{Binding Birthdate}" IsReadOnly="True" Width="90"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="True" Width="150"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                Content="Adopt" 
                                Background="#F2E5D7" 
                                Foreground="#63372C" 
                                FontFamily="Arial Rounded MT Bold"
                                FontSize="14"
                                Padding="5,2"
                                Click="AdoptCat_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Height="50"
            Width="200"
            Margin="0,250,0,0"
            Content="Go back"
            FontFamily="Arial Rounded MT Bold"
            FontSize="20"
            Background="#F2E5D7"
            Foreground="#63372C"
            Click="GoBackBtn_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
