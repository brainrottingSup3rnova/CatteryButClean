<Window x:Class="WpfCattery.AddAdopterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCattery"
        mc:Ignorable="d"
        Title="AddAdopterWindow" Height="450" Width="700"
        Background="#FFBCB5">
    <StackPanel>
        <StackPanel>
            <Label
                Content="Name"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Foreground="#C97D60"
                Margin="30,10,30,0"/>
            <TextBox
                x:Name="txtBoxName"
                Width="400"
                Height="30"/>
        </StackPanel>
        <StackPanel>
            <Label
                Content="Surname"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,5,30,0"
                Foreground="#C97D60"/>
            <TextBox
                x:Name="txtBoxSurname"
                Width="400"
                Height="30"/>
        </StackPanel>
        <StackPanel>
            <Label
                Content="Email"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,5,30,0"
                Foreground="#C97D60"/>
            <TextBox
                x:Name="txtBoxEmail"
                Width="400"
                Height="30"/>
        </StackPanel>
        <StackPanel>
            <Label
                Content="Phone number"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,5,30,0"
                Foreground="#C97D60"/>
            <TextBox
                x:Name="txtBoxPhoneNumber"
                Width="400"
                Height="30"/>
        </StackPanel>
        <StackPanel>
            <Label
                Content="Address (street / number / city / postal code)"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,5,30,0"
                Foreground="#C97D60"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <TextBox
                    x:Name="txtBoxStreet"
                    Width="200"
                    Height="30"
                    Margin="30,0,0,0"/>
                <TextBox
                    x:Name="txtBoxCivicNumber"
                    Width="50"
                    Height="30"
                    Margin="10,0,0,0"/>
                <TextBox
                    x:Name="txtBoxCity"
                    Width="130"
                    Height="30"
                    Margin="10,0,0,0"/>
                <TextBox
                    x:Name="txtBoxPostalCode"
                    Width="130"
                    Height="30"
                    Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Label
                Content="TIN"
                HorizontalAlignment="Center"
                FontFamily="Arial Rounded MT Bold"
                FontSize="14"
                Margin="30,5,30,0"
                Foreground="#C97D60"/>
            <TextBox
                x:Name="txtBoxTin"
                Width="400"
                Height="30"/>
        </StackPanel>
        <Button
            Content="Add Adopter"
            Width="150"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Background="#F2E5D7"
            Foreground="#63372C"
            FontFamily="Arial Rounded MT Bold"
            FontSize="16"
            Click="AddAdopterBtn_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
